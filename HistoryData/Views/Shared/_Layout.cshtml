<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dan's Weather Application</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="clear: both">
            <p>
                &copy; @DateTime.Now.Year - Dan Sheehan's Weather Application &emsp; &ensp; &ensp; <img src="@Url.Content("~/Content/Photos/sun.JPG")" width="40" height="40" alt="" />
                Sunrise: 6:17am &ensp;  Sunset: 7:29pm
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
