@model IEnumerable<HistoryData.Core.Models.History>
@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Records</h2>

<p class="alert alert-info">
    Climate data is from the Midwest Regional Climate Center
</p>

<table id="records" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Day</th>
            <th>High Temperature</th>
            <th>Low Temperature</th>
            <th>Mean Temperature</th>
            <th>Precipitation</th>
            <th>Daily Snowfall</th>
            <th>Snowdepth</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            RecordsController.initReadOnly("#records");
        });
    </script>
}